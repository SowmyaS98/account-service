<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.9.xsd">

    <changeSet id="001-create-accounts-table" author="sowmyasumanth">
        <createTable tableName="accounts" schemaName="account_schema">
            <column name="account_id" type="varchar(20)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer_id" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="account_type" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="currency" type="varchar(3)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="phone_number" type="varchar(20)"/>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
            <column name="version" type="bigint" defaultValueNumeric="0"/>
        </createTable>
    </changeSet>

    <changeSet id="002-create-indexes" author="sowmyasumanth">
        <createIndex indexName="idx_customer_id" tableName="accounts" schemaName="account_schema">
            <column name="customer_id"/>
        </createIndex>

        <createIndex indexName="idx_email" tableName="accounts" schemaName="account_schema" unique="true">
            <column name="email"/>
        </createIndex>

        <createIndex indexName="idx_status" tableName="accounts" schemaName="account_schema">
            <column name="status"/>
        </createIndex>
    </changeSet>

    <changeSet id="003-add-check-constraints" author="sowmyasumanth">
        <sql>
            ALTER TABLE account_schema.accounts
            ADD CONSTRAINT chk_account_type
            CHECK (account_type IN ('SAVINGS', 'CURRENT', 'SALARY', 'FIXED_DEPOSIT'));

            ALTER TABLE account_schema.accounts
            ADD CONSTRAINT chk_status
            CHECK (status IN ('ACTIVE', 'INACTIVE', 'SUSPENDED', 'CLOSED'));
        </sql>
    </changeSet>

</databaseChangeLog>